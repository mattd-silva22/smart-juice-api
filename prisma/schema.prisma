generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        String   @id @default(uuid())
  firstName String
  cpf       String   @unique
  lastName  String
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  address   address?
}

model address {
  id        String   @id @default(uuid())
  user      users    @relation(fields: [userId], references: [id]) // A referência é mantida aqui
  userId    String   @unique
  street    String
  city      String
  state     String
  cep       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
